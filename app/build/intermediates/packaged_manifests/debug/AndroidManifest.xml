<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.caloriecounter"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="25"
        android:targetSdkVersion="30" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.CalorieCounter" >
        <activity
            android:name="com.example.caloriecounter.DailyMacroCounter.DailyMacroCounterActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.CalorieCounter.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.caloriecounter.DailyConsumption.DailyConsumptionActivity"
            android:label="@string/title_activity_daily_consumption"
            android:theme="@style/Theme.CalorieCounter.NoActionBar" />
        <activity
            android:name="com.example.caloriecounter.WeeklyProgression.WeeklyProgressionActivity"
            android:label="@string/title_activity_weekly_progression"
            android:theme="@style/Theme.CalorieCounter.NoActionBar" />
        <activity
            android:name="com.example.caloriecounter.FoodDisplay.FoodDisplayActivity"
            android:label="@string/title_activity_food_display"
            android:theme="@style/Theme.CalorieCounter.NoActionBar" />
    </application>

</manifest>