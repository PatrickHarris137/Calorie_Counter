<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.caloriecounter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CalorieCounter">
        <activity
            android:name=".DailyMacroCounter.DailyMacroCounterActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.CalorieCounter.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DailyConsumption.DailyConsumptionActivity"
            android:label="@string/title_activity_daily_consumption"
            android:theme="@style/Theme.CalorieCounter.NoActionBar" />
        <activity
            android:name=".WeeklyProgression.WeeklyProgressionActivity"
            android:label="@string/title_activity_weekly_progression"
            android:theme="@style/Theme.CalorieCounter.NoActionBar" />
        <activity
            android:name=".FoodDisplay.FoodDisplayActivity"
            android:label="@string/title_activity_food_display"
            android:theme="@style/Theme.CalorieCounter.NoActionBar" />
    </application>

</manifest>